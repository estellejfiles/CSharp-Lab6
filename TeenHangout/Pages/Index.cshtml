@page
@model IndexModel
@{
    ViewData["Title"] = "Teen Hangout";
}

<!-- container for member and recent post cards -->
<div class="container mt-4">
    <h1 class="text-center text-primary">Teen Hangout</h1>
    <p class="text-center">Your virtual space to connect!</p>

    <!-- member card to display users -->
    <div class="card my-4">
        <div class="card-body">
        <!-- introduce site section to display members -->
            <h2>Our Members</h2>
            <!-- loop through items in User class; display Username and Age attributes for each instance -->
            @for (int i=0; i < Model.Users.Length; i++) {
                <div class="alert alert-secondary">
                    <strong>@Model.Users[i].Username</strong>
                    Age: @Model.Users[i].Age
                </div>
            }
        </div>
    </div>

    <!-- recent posts card to display recent posts -->
    <div class="card my-4">
        <div class="card-body">
            <!-- heading for recent posts site section -->
            <h2>Recent Posts</h2>
            <!-- loop through items in Post class; display Username, Content, and Likes attributes for each instance -->
            @for (int i = 0; i < Model.Posts.Length; i++) {
                <div class="alert alert-info">
                    <strong>@Model.Posts[i].Username</strong>
                    <p>@Model.Posts[i].Content</p>
                    <small>Likes: @Model.Posts[i].Likes</small>
                </div>
            }
        </div>
    </div>
</div>

<!-- popular posts card to display popular posts -->
<div class="card my-4">
    <div class="card-body">
        <!-- heading for popular posts site section -->
        <h2>Popular Posts (20+ Likes)</h2>
        <!-- loop through items in Post class; display only posts with 20+ likes;
        display their Username, Content, and Likes attributes -->
        @for (int i = 0; i < Model.Posts.Length; i++) {
            @if (Model.Posts[i].Likes >= 20) {
                <div class="alert alert-success">
                    <strong>@Model.Posts[i].Username</strong>
                    <p>@Model.Posts[i].Content</p>
                    <small>Likes: @Model.Posts[i].Likes</small>
                </div>
            }
        }
    </div>
</div>